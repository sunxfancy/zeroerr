DOXYFILE_ENCODING = UTF-8
PROJECT_NAME = "ZeroErr"
GENERATE_LATEX = NO

# output
GENERATE_XML = YES
OUTPUT_LANGUAGE = Chinese
XML_OUTPUT = zh
OUTPUT_DIRECTORY = @CMAKE_CURRENT_BINARY_DIR@/doc_doxygen/
EXCLUDE_SYMBOLS = @7 PrinterExt std

# input
FULL_PATH_NAMES = YES
STRIP_FROM_PATH = @CMAKE_SOURCE_DIR@
RECURSIVE = YES
INPUT = @CMAKE_SOURCE_DIR@/src/  @CMAKE_SOURCE_DIR@/include/  @CMAKE_SOURCE_DIR@/docs/zh
FILE_PATTERNS = *.h *.hpp *.cpp *.md

# examples
EXAMPLE_PATH = @CMAKE_SOURCE_DIR@/examples
EXAMPLE_PATTERNS = *.cpp

# Html related stuff, optional
SHOW_NAMESPACES = YES
EXTRACT_ALL = YES
GENERATE_HTML = NO

# images
IMAGE_PATH = @CMAKE_SOURCE_DIR@/docs/fig